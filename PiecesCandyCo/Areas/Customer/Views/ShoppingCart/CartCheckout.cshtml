@model ShoppingCartVM


<form method="post">
	<br />
	<div class="container">
		<div class="card shadow border-0">

			<div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
				<div class="row px-4">
					<div class="col-6 ">
						<a asp-action="Index" class="btn btn-info btn-sm"><i class="bi bi-arrow-left"></i> Back to Cart</a>
					</div>
					<div class="col-6">
						<h5 class="pt-2 text-white text-end">
							Checkout Summary
						</h5>
					</div>
					
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Shipping Details:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Name</label>
								</div>
								<div class="col-9">
									<input asp-for="CustomerOrderDetail.Name" class="form-control" />
									<span asp-validation-for="CustomerOrderDetail.Name" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Phone</label>
								</div>
								<div class="col-9">
									<input asp-for="CustomerOrderDetail.PhoneNumber" class="form-control" />
									<span asp-validation-for="CustomerOrderDetail.PhoneNumber" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Street Address</label>
								</div>
								<div class="col-9">
									<input asp-for="CustomerOrderDetail.StreetAddress" class="form-control" />
									<span asp-validation-for="CustomerOrderDetail.StreetAddress" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>City</label>
								</div>
								<div class="col-9">
									<input asp-for="CustomerOrderDetail.City" class="form-control" />
									<span asp-validation-for="CustomerOrderDetail.City" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>State</label>
								</div>
								<div class="col-9">
									<input asp-for="CustomerOrderDetail.State" class="form-control" />
									<span asp-validation-for="CustomerOrderDetail.State" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Zip Code</label>
								</div>
								<div class="col-9">
									<input asp-for="CustomerOrderDetail.ZipCode" class="form-control" />
									<span asp-validation-for="CustomerOrderDetail.ZipCode" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Order Summary:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach(var details in Model.ShoppingCartItems) {
								<li class="list-group-item d-flex justify-content-between">
									<div>
										<h6 class="my-0">@details.Product.Name</h6>
										<small class="text-muted">Quantity: @details.Quantity</small>
									</div>
									<span class="text-muted">@((details.Price * details.Quantity).ToString("c")) </span>
								</li>
								}

								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-info">Total</small>
									<strong class="text-info">@Model.CustomerOrderDetail.OrderTotal.ToString("c")</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p class= "text-dark" style="font-size:14px">
							Estimate Arrival Date:
							@DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
						</p>
					</div>
					
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Place Order</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>